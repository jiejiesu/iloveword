<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_marginLeft="20sp"
                  android:layout_marginRight="20sp"
                  android:orientation="horizontal">
        <ImageButton android:background="@drawable/select_a"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>
        <TextView android:id="@+id/select_a"
                  android:layout_width="100sp"
                  android:layout_height="100sp"/>
        <ImageButton android:background="@drawable/select_b"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>
        <TextView android:id="@+id/select_b"
                  android:layout_width="100sp"
                  android:layout_height="100sp"/>

    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_marginLeft="20sp"
                  android:layout_marginRight="20sp"
                  android:orientation="horizontal">
        <ImageButton android:background="@drawable/select_c"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>
        <TextView android:id="@+id/select_c"
                  android:layout_width="100sp"
                  android:layout_height="100sp"/>
        <ImageButton android:background="@drawable/select_d"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>
        <TextView android:id="@+id/select_d"
                  android:layout_width="100sp"
                  android:layout_height="100sp"/>

    </LinearLayout>
</LinearLayout>